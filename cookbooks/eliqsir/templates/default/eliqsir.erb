

server {
      listen   80;
      sendfile off;
        server_name  eliqsir.grummle.com;

          access_log  /var/log/nginx/localhost.access.log;

            location / {
                    root   /srv/www/eliqsir/src/static/app;
                        index  index.html index.htm;
                          }

             location /api/ {
                             proxy_pass http://127.0.0.1:8000;
                           }

}

